{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "db:generate": {
      "inputs": ["prisma/schema.prisma"],
      "cache": false
    },
    "db:push": {
      "inputs": ["prisma/schema.prisma"],
      "cache": false
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false
    },
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": [".next/**", ".expo/**"]
    },
    "lint": {
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    },
    "type-check": {
      "dependsOn": ["^db:generate"],
      "cache": false
    }
  },
  "globalEnv": [
    "DATABASE_URL",
    "NEXTAUTH_SECRET",
    "NEXTAUTH_URL",

    "DISCORD_CLIENT_ID",
    "DISCORD_CLIENT_SECRET",

    "GITHUB_CLIENT_ID",
    "GITHUB_CLIENT_SECRET",

    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",

    "TWITTER_CLIENT_ID",
    "TWITTER_CLIENT_SECRET"
  ]
}
